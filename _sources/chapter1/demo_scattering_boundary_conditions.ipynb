    "from mesh_wire import generate_mesh_wire\n",
    "\n",
    "from dolfinx import fem, plot\n",
    "from dolfinx.io import VTXWriter\n",
    "from dolfinx.io.gmshio import model_to_mesh\n",
    "import ufl\n",
